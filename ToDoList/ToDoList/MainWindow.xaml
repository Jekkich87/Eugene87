<Window x:Class="ToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList"
        mc:Ignorable="d"
        Title="My ToDo List" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="dtgTodoListGrid" FontSize="16" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Creation Date" Width="180" IsReadOnly="True" Binding="{Binding Path = CreationDate}"></DataGridTextColumn>
                <DataGridCheckBoxColumn Header="Status" Width="80" IsReadOnly="False" Binding="{Binding Path = IsDone}"></DataGridCheckBoxColumn>
                <DataGridTextColumn Header="Notations" Width="*" IsReadOnly="False" Binding="{Binding Path = Notes}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
